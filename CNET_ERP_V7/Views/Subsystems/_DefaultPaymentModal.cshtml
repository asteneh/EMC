@using CNET_ERP_V7.Models.SubSytsemModel;
@using Newtonsoft.Json;
@model VoucherSearchModel

@inject CNET_ERP_V7.Common.Company.SharedHelpers sharedHelpers
@{
    var payment = await sharedHelpers.GetLookUpByType("Payment Methods");
}

<div class="modal fade" id="paymnetgetwaymodel">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5>
                    <span>Tax Type</span>
                </h5>
            </div>
            <div class="box-body">
                <div class="modal-body">
                    <div class="row">
                        <form class="form-horizontal" id="" method="post">

                            <div class="col-md-12" style="margin-top:25px">

                                <div class="row">

                                    <div class="divTable">

                                        <div class="col-md-6" style="margin-left:0px ;">
                                            <ul class="sidebar-men secondNav tree " data-widget="tree" id="">
                                                @foreach (var item in payment)
                                                {
                                                    <li class="nav-item treeview menu-open attachmentType" id="parentVoucher">
                                                        <a data-toggle="tab" data-value="@item.Id/@item.Description" data-types="@item.Id/@item.Description" style="text-decoration-line:none!important" name="catagory" class="addPaymnetgatway">
                                                            <span class="labelcss" selectedValue="@item.Id">@item.Id/@item.Description</span>
                                                        </a>

                                                        <ul class="treeview-menu" style="padding-left:35px; background-color:white;" id="@item.Id">
                                                        </ul>
                                                    </li>
                                                }

                                            </ul>


                                        </div>
                                    </div>

                                </div>


                            </div>





                        </form>
                    </div>

                </div>
                <div class="col-md-12">
                    <button type="button" action="addRow" class="btn btn-default btn-sm" id="paymenttnSave">Ok</button>
                    <button class="btn btn-default btn-sm" data-dismiss="modal" id="paymentdismiss">Close</button>
                </div>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script>
    var valueitem = "";
    $(document).ready(function () {

        $(".addPaymnetgatway").click(function () {
            valueitem = $(this).data("value");

        });

        $("#paymenttnSave").click(function () {

            $('#default_payment_getway').val(valueitem);
            $('#paymentdismiss').trigger("click");
        });

    });


</script>
