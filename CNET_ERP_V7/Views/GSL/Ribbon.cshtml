@using CNET_ERP_V7.Models.SubSytsemModel
@using CNET_ERP_V7.Models.FramworkModels
@using Newtonsoft.Json;
@model GSLmodel
@{

}
<style>
    .btn {
        background-color: #f5f5f5;
        color: #092254 !important;
    }
</style>
<style>
    .column-1 {
        margin-top: 15px !important;
    }

    .column-2 {
        border: #115ee10f solid 0.05px !important;
    }

    .column-3 {
        border: #115ee10f solid 0.05px !important;
    }

    .column-4 {
        border: #115ee10f solid 0.05px !important;
    }

    .__0padding {
        padding: 0 !important;
    }

    .__1padding {
        padding: 2px !important;
    }

    label {
        font-size: 14px !important;
        font-weight: 600 !important;
        color: #030930 !important;
        margin-top: 0.8em !important;
        margin-bottom: 0 !important;
    }

    .select2-container {
        display: inline !important;
    }

    .input-group .form-control {
        position: relative;
        z-index: 0 !important;
        float: left;
        width: 100%;
        margin-bottom: 0;
    }

    @@media only screen and (max-width: 480px) {
        .column-1 {
            margin-top: 0px !important;
        }
    }

    @@media only screen and (min-width: 481px) {
        .column-1 {
            margin-top: 15px !important;
            padding-right: 2px !important;
        }
    }

    @@media(min-width: 992px) and (max-width: 1346px) {
        .btn-app {
            border-radius: 3px;
            position: relative;
            margin: 0 0 10px 10px;
            min-width: 60px !important;
            height: 60px;
            text-align: center;
            color: #666;
            border: 1px solid #ddd;
            background-color: #f4f4f4;
            font-size: 12px;
        }

        label {
            font-size: 12px !important;
        }
    }

    .dropdown-menu > li > a {
        color: #000 !important;
    }

    .btn-app > .fa, .btn-app > .glyphicon, .btn-app > .ion {
        font-size: 20px;
        display: block;
        padding: 5px !important;
    }
</style>
<style>
    .my-form-group {
        margin-bottom: 20px;
    }

    .my-label {
        font-weight: bold;
        display: block;
    }

    .my-form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>
<div class="box box-primary">
    <!-- /.box-header -->
    <div class="box-body" id="ribbon-box">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 __0padding">
                    <div class="col-md-2  col-sm-12 col-xs-12  column-1">
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <a role="button" id="new-settingGsl" class="btn btn-app" style="color:#030930;"> <i class="fa fa-plus-circle"></i>New</a>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <a role="button" id="save-settingGsl" class="btn btn-app"> <i style="color: #030930" class="fa fa-save"></i>Save</a>
                        </div>

                    </div>
                    <br />
                    <input asp-for="GslTypevalue" type="hidden" class="form-control pull-right" id="@nameof(Model.GslTypevalue)">
                    <div class="col-md-3  col-sm-12 col-xs-12 column-2">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            @(Html.DevExtreme().SelectBox()
                                .ID(nameof(Model.GslTypeList))
                                .DisplayExpr("description")
                                .Label("Select Gsl Type")
                                .LabelMode(EditorLabelMode.Floating)
                                .DataSource(d => d.Mvc()
                                .Controller("Filters")
                                .LoadAction("GetGslTypeList")
                                .Key("id"))
                                .OnValueChanged("GslselectBox_valueChanged_conunit")
                                .Value(Model.GslTypevalue)
                                )

                        </div>
                    </div>
                </div>

            </div>

        </div>
        <!-- /.box-body -->
    </div>
</div>

<script>
    function GslselectBox_valueChanged_conunit(data) {
        alert(data.value.id)
        console.log(data.value.id)
        var selectedValue = data.value.id
        $("#GslTypevalue").val(selectedValue);
    }
</script>
