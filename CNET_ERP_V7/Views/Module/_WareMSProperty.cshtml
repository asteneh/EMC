<script>


    function isNumber(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;

        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        else {

            return true;
        }

    }


</script>

<script>
    $('#ware_Stock_BalanceServiceStarts').timepicker({ 'timeFormat': 'H:i' });

</script>


