</div>
<script>

    function FontNewFormFunction() {

        var $form = $('#FontNewFormData');
        var data = $form.serialize();
        var action = $('#FontNewFormData').attr("action");
        $.ajax({
            type: "POST",
            url: action,
            data: data,
            success: function (data) {
                alert(data);
                submitfunctionforFont();

                ClearFontModal();

          },
        });

        return false;

    };

</script>


<script>
    $(document).on("click", ".btnUpdatefont", function () {
        $("#fontbtnNewsave").attr("action", "updatePRT");

             var code = $(this).data('code');
             var desc = $(this).data('fdesc');
             var style = $(this).data('fstyle');
             var color = $(this).data('col');
             var face = $(this).data('facode');
             var size = $(this).data('size');
             var isdefa = $(this).data('isdefa');
            var remark = $(this).data('rema');


                    $('#@nameof(Model.fontcodeforupdate)').val(code);
                    $('#@nameof(Model.font_desc)').val(desc);
                    $('#@nameof(Model.font_style)').val(style).trigger('change');
                    $('#@nameof(Model.font_color)').val(color).trigger('change');
                    $('#@nameof(Model.font_face)').val(face).trigger('change');
                    $('#@nameof(Model.font_size)').val(size).trigger('change');
                    $('#@nameof(Model.font_isdefault)').prop('checked', isdefa);
                    $('#@nameof(Model.font_remark)').val(remark);

        
     });

    $(document).on("click", ".btnDeletefont", function () {

        var deletefont = $(this).data('code');
        var table = $('#Org_unit_Defn_font').DataTable();
        if (confirm('are you sure to delete this record?')) {

            table
                .row($(this).parents('tr'))
                .remove()
                .draw()

            $.ajax({
                type: "POST",
                dataType: 'json',
                url: '@Url.Action("Deletefont", "Company")',
                data: { FONTCODE: deletefont },

                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                success: function (data) {
                    alert(data);


                }
            });

        }
      });
    function ClearFontModal() {
        $('#@nameof(Model.font_desc)').val("");
        $('#@nameof(Model.font_face)').val("").trigger('change');
        $('#@nameof(Model.font_color)').val("");
        $('#@nameof(Model.font_style)').val("").trigger('change');
        $('#@nameof(Model.font_size)').val("").trigger('change');
        $('#@nameof(Model.font_isdefault)').prop('checked', false);
        $('#@nameof(Model.font_remark)').val("");
    }
</script>







