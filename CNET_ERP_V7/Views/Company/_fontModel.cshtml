                                        <span asp-validation-for="font_remark"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <input asp-for="fontcodeforupdate"  hidden/>


                    </form>
                </div>

            </div>
        </div>
        <!-- /.modal-content -->
