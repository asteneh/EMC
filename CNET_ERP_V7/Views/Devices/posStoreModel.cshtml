@using CNET_ERP_V7.Models.SubSytsemModel;
@using Newtonsoft.Json;
@model Devicemodel

@inject CNET_ERP_V7.Common.Company.SharedHelpers sharedHelpers
@{

    var codemodel = Model.DeviceType;
    var posList = await sharedHelpers.GetSystemConstantByCat("Store Type");
}
<style>
    .modalbody {
        position: relative;
        padding: 20px;
        height: 200px;
        overflow-y: scroll;
    }

    .modaldialog {
        width: 700px; /* New width for default modal */
        height: 50%; /* New width for default modal */
    }

    .btnlength {
        min-width: 100px;
    }
</style>
<div class="modal fade" id="PosStorebtnsaveMap">
    <div class="modal-dialog modaldialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>
                    <span>POS Store</span>
                </h5>
            </div>
            <div class="box-body">
                <div class="modal-body modalbody">
                    <div class="row">
                        <form class="form-horizontal" id="IdentificationFormData" asp-action="EditIdentificationn" asp-controller="" method="post">

                            <div class="col-md-12" style="margin-top:25px">

                                <div class="row">

                                    <div class="divTable">

                                        <div class="col-md-8" style="margin-left:0px ;" id="div23">
                                            <ul class="sidebar-men secondNav tree " data-widget="tree" id="attachement_nav">
                                                @foreach (var item in posList)
                                                {
                                                    <li class="nav-item treeview menu-open attachmentType" id="parent">
                                                        <a data-toggle="tab" data-value="@item.Description" data-types="@item.Id/@item.Description" id="a123" style="text-decoration-line:none!important" name="catagory" class="addposStorevalue">
                                                            <span class="labelcss" selectedValue="@item.Description">@item.Description</span>
                                                        </a>

                                                        <ul class="treeview-menu" style="padding-left:35px; background-color:white;" id="@item.Id">
                                                        </ul>
                                                    </li>
                                                }

                                            </ul>


                                        </div>
                                    </div>

                                </div>


                            </div>


                        </form>
                    </div>
                </div>

                <div class="col-md-12">
                    <button class="btn btn-default btn-sm btnlength" type="reset" id="PosStorebtnsave">Ok</button>

                    <button class="btn btn-default btn-sm btnlength" id="posstoredatadismis" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script>
    var valueitem = "";
    $(document).ready(function () {

        $(".addposStorevalue").click(function () {
            valueitem = $(this).data("types");
        });
        $("#PosStorebtnsave").click(function () {
            $('#pos_store_value').val(valueitem);
            $('#pos_store_valuecima').val(valueitem);
            $('#reference_pos_store_value').val(valueitem);
            $('#recurring_pos_store_value').val(valueitem);
            $('#premium_pos_store').val(valueitem);
            $('#reservation_pos_store_value').val(valueitem);
            $('#pos_store_valueTras').val(valueitem);
            $('#pos_store_valuenvs').val(valueitem);
            $('#pos_store_valuesms').val(valueitem);
            $('#posstoredatadismis').trigger('click');
        });
    });
</script>

