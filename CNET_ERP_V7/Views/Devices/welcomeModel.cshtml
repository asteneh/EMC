@model Devicemodel

@inject CNET_ERP_V7.Common.Company.SharedHelpers sharedHelpers
@{
    var VoucherTypeList = await sharedHelpers.GetSystemConstantByCat("Organization Unit Type");

    //Select(x => new { x.type, x.description,x.code}).Distinct().ToList();

