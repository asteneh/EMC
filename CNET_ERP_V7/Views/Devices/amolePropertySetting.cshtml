<script>

    var getdevicecode = "";
    var getpassword = "";

    $(document).on("click", ".devicepropertysetting", function () {
        getdevicecode = $(this).data('types');
        AmoleBirrSetting(getdevicecode);

        });
    $(document).on("click", '#btnDevicesettingImport', function () {
        var devcode = $('#devicesettingpropertyInindex').val();
        AmoleBirrSetting(devcode);
    });
    function AmoleBirrSetting(devcode) {
          $.ajax({
                type: "POST",
                dataType: 'json',
                url: '@Url.Action("getPropertycurrentvalue", "Devices")',
              data: { code: devcode},

                success: function (data) {
                      $('#@nameof(Model.amole_apiKey)').val("");
                      $('#@nameof(Model.amole_apiUsername)').val("");
                      $('#@nameof(Model.amole_apiPassword)').val("");
                      $('#@nameof(Model.amole_paymentApiEndpointUrl)').val("");
                      $('#@nameof(Model.amole_serviceApiEndpointUrl)').val("");
                      $('#@nameof(Model.amole_vendorAccountId)').val("");
                      $('#@nameof(Model.amole_merchantId)').val("");
                       $.each(data, function (index, item) {

                              switch (item.attribute) {
                                  case "ApiKey":
                                      $('#@nameof(Model.amole_apiKey)').val(item?.currentValue);

                                      break;
                                  case "ApiUsername":
                                      $('#@nameof(Model.amole_apiUsername)').val(item?.currentValue);
                                      break;
                                  case "ApiPassword":
                                      $('#@nameof(Model.amole_apiPassword)').val(item.currentValue);
                                      break;
                                  case "PaymentApiEndpointUrl":
                                      $('#@nameof(Model.amole_paymentApiEndpointUrl)').val(item.currentValue);

                                      break;
                                  case "ServiceApiEndpointUrl":
                                      $('#@nameof(Model.amole_serviceApiEndpointUrl)').val(item.currentValue);
                                      break;
                                  case "VendorAccountId":
                                      $('#@nameof(Model.amole_vendorAccountId)').val(item.currentValue);
                                      break;
                                  case "MerchantId":
                                      $('#@nameof(Model.amole_merchantId)').val(item.currentValue);
                                      break;
                                  @*case "RegisteredIpAddress":
                                      $('#@nameof(Model.amole_registeredIpAddress)').val(item.currentValue);
                                      break;*@
                              }
                      });

                },
                error: function (x) {
                    alert(x.responseText);

                }
            });
    }

</script>
